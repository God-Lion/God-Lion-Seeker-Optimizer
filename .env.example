# ==============================================
# God Lion Seeker Optimizer Configuration
# ==============================================

# Application Settings
APP_NAME="God Lion Seeker Optimizer"
ENVIRONMENT=development
DEBUG=false

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=godlionseeker_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# LinkedIn Authentication (optional but recommended for better results)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Indeed Authentication (optional but recommended for better results)
INDEED_EMAIL=
INDEED_PASSWORD=

# Google SSO Authentication Layer
# This can be used for Indeed and potentially other platforms
# Set INDEED_USE_GOOGLE_SSO=true to use Google SSO for Indeed instead of direct credentials
INDEED_USE_GOOGLE_SSO=false
GOOGLE_EMAIL=your-email@gmail.com
GOOGLE_PASSWORD=your-google-password

# Scraping Settings
SCRAPE_HEADLESS=true
SCRAPE_SLOW_MO=1.0
SCRAPE_TIMEOUT=40
SCRAPE_MAX_WORKERS=3

# Resume Path (for job matching)
RESUME_PATH=my_resume.txt

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_MAX_CONNECTIONS=20

# Cache TTL Settings (in seconds)
CACHE_JOB_TTL=86400  # 24 hours
CACHE_SEARCH_TTL=3600  # 1 hour
CACHE_COMPANY_TTL=604800  # 7 days
CACHE_SESSION_TTL=3600  # 1 hour

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email Notifications
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password
SENDER_NAME=God Lion Seeker Optimizer
RECIPIENT_EMAILS=your-email@gmail.com

# Notification Settings
NOTIFY_ON_NEW_JOBS=true
NOTIFY_ON_HIGH_MATCHES=true
SEND_DAILY_SUMMARY=true
NOTIFY_ON_ERRORS=true
HIGH_MATCH_THRESHOLD=75.0
SUMMARY_TIME=18:00
MIN_JOBS_FOR_NOTIFICATION=1
MAX_JOBS_PER_EMAIL=20
