# Development Environment Configuration
# Copy this to .env for local development

# Application
APP_NAME=God Lion Seeker Optimizer
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Database (PostgreSQL for development with Docker)
DATABASE_URL=postgresql+asyncpg://godlion:godlionpass@postgres:5432/godlionseeker_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=godlion
POSTGRES_PASSWORD=godlionpass
POSTGRES_DB=godlionseeker_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# Email Configuration (MailDev for development)
EMAIL_ENABLED=true
SMTP_SERVER=maildev
SMTP_PORT=1025
SMTP_USE_TLS=false
SMTP_USE_SSL=false
SENDER_EMAIL=noreply@godlionseeker.local
SENDER_PASSWORD=
SENDER_NAME=God Lion Seeker Optimizer
RECIPIENT_EMAILS=test@example.com

# Notification Settings
NOTIFY_ON_NEW_JOBS=true
NOTIFY_ON_HIGH_MATCHES=true
SEND_DAILY_SUMMARY=false
NOTIFY_ON_ERRORS=true
HIGH_MATCH_THRESHOLD=75.0

# JWT Authentication
JWT_SECRET_KEY=dev-secret-key-change-in-production-12345678
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Frontend URL
FRONTEND_URL=http://localhost:8080

# LinkedIn Cookie (optional - for LinkedIn scraping)
LI_AT_COOKIE=

# Scraping Settings
SCRAPE_HEADLESS=true
SCRAPE_SLOW_MO=1.0
SCRAPE_TIMEOUT=40
SCRAPE_MAX_WORKERS=3

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Cache TTL (seconds)
CACHE_JOB_TTL=86400
CACHE_SEARCH_TTL=3600
CACHE_COMPANY_TTL=604800
CACHE_SESSION_TTL=3600

# Development Tools Ports
# MailDev Web UI: http://localhost:1080
# PgAdmin: http://localhost:5050 (admin@godlionseeker.local / admin)
# Redis Commander: http://localhost:8081
# Prometheus: http://localhost:9090
# Grafana: http://localhost:3000 (admin / admin)
