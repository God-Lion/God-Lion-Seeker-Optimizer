# ===========================
# ENCRYPTION CONFIGURATION
# ===========================

# Data Encryption Key (for PII fields - email, name, etc.)
# Generate with: python -m src.scripts.generate_encryption_keys
ENCRYPTION_KEY=

# File Encryption Key (for resume files and documents)
# Generate with: python -m src.scripts.generate_encryption_keys
FILE_ENCRYPTION_KEY=

# Enable/disable encryption (set to false only for development/testing)
ENCRYPTION_ENABLED=true

# ===========================
# REDIS SECURITY
# ===========================

# Redis Authentication
REDIS_PASSWORD=

# Redis TLS/SSL Configuration
REDIS_USE_TLS=false
REDIS_SSL_CERT_REQS=required
REDIS_SSL_CA_CERTS=
REDIS_SSL_CERTFILE=
REDIS_SSL_KEYFILE=

# ===========================
# DATABASE ENCRYPTION
# ===========================

# PostgreSQL Transparent Data Encryption (TDE)
# Note: Enable TDE at PostgreSQL server level
# For PostgreSQL: Set up pgcrypto extension or use AWS RDS encryption
POSTGRES_ENABLE_TDE=false

# ===========================
# SECURITY BEST PRACTICES
# ===========================

# Rotate encryption keys periodically (recommended: every 90 days)
# Last key rotation date (for tracking)
LAST_KEY_ROTATION_DATE=

# Encryption version (update when rotating keys)
ENCRYPTION_VERSION=v1.0

# ===========================
# LOG SANITIZATION
# ===========================

# Enable PII sanitization in logs
LOG_SANITIZATION_ENABLED=true

# ===========================
# FILE STORAGE SECURITY
# ===========================

# AWS S3 Configuration (for secure cloud storage)
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_ENCRYPTION=AES256

# ===========================
# ADDITIONAL NOTES
# ===========================

# 1. NEVER commit this file with actual keys to version control
# 2. Store encryption keys in a secure secrets manager (e.g., AWS Secrets Manager, HashiCorp Vault)
# 3. Use different keys for development, staging, and production
# 4. Back up encryption keys in a secure location
# 5. Implement key rotation policy
# 6. Monitor encryption/decryption operations for anomalies
